LibDir = $(ALDORLIBROOT)/lib
IncDir = $(ALDORLIBROOT)/include
DocDir = $(ALDORLIBROOT)/doc/tex
TestDir = $(ALDORLIBROOT)/test
StampDir  = $(LibDir)
DocStampDir  = $(DocDir)
TestStampDir  = $(TestDir)

ALDOR=$(COMPILER) $(FLAGS)

.SUFFIXES: .ao .as

# Implicit rule for building .al file
.as.ao: 
	@echo Compiling $*.as ...
	$(ALDOR) $(MAKEDIR)\$*.as
	@uniar rv $(ALDORLIB) $*.ao
	@del $*.ao

.PRECIOUS:

SRCS = sal_timer sal_file sal_cmdline sal_agat sal_version rtexns ald_trace

aobj:  sal_timer.ao sal_file.ao sal_version.ao sal_cmdline.ao sal_agat.ao \
	ald_trace.ao rtexns.ao

objects: $(SALLIM)

clean:
	-@rm -f *.fm *.ao *.o *~

# Explicit dependencies

sal_timer.ao:
sal_file.ao:
sal_version.ao:
sal_cmdline.ao:
sal_agat.ao:
ald_trace.ao:
rtexns.ao: ald_trace.ao

