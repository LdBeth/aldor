# ..From autoconf
@SET_MAKE@

VPATH = @srcdir@
abs_top_builddir = @abs_top_builddir@
srcdir = @srcdir@
top_builddir = @top_builddir@
builddir = @builddir@
abs_top_srcdir = @abs_top_srcdir@
subdir = aldor/test

.PRECIOUS: Makefile
Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	@case '$?' in \
	  *config.status*) \
	    cd $(top_builddir) && $(MAKE) $(AM_MAKEFLAGS) am--refresh;; \
	  *) \
	    echo ' cd $(top_builddir) && $(SHELL) ./config.status $(subdir)/$@ '; \
	    cd $(top_builddir) && $(SHELL) ./config.status $(subdir)/$@ ;; \
	esac;

aldorexedir = $(abs_top_builddir)/aldor/src
aldortooldir = $(abs_top_builddir)/aldor/subcmd/unitools
foamlibdir = $(abs_top_builddir)/aldor/lib/libfoamlib

fmtests := 
ctests  := 
otests  := 
jtests  :=

_aotests := $(sort $(fmtests) $(ctests) $(jtests))
_fmtests := $(sort $(fmtests) $(jtests))
_ctests  := $(sort $(ctests)  $(otests))
_otests  := $(sort $(otests))
_jtests  := $(sort $(jtests))

$(patsubst %, out/fm/%.fm, $(_fmtests)): out/fm/%.fm: out/ao/%.ao
	mkdir -p $$(dirname $@)
	$(aldorexedir)/aldor -Nfile=$(aldorexedir)/aldor.conf -Ffm=$(builddir)/$@ $<	

$(patsubst %, out/c/%.c, $(_ctests)): out/c/%.c: out/ao/%.ao
	mkdir -p $$(dirname $@)
	$(aldorexedir)/aldor -Nfile=$(aldorexedir)/aldor.conf -Fc=$(builddir)/$@ $<	

$(patsubst %, out/java/%.java, $(_jtests)): $(aldorexedir)/javagen
$(patsubst %, out/java/%.java, $(_jtests)): out/java/%.java: out/fm/%.fm
	mkdir -p $$(dirname $@)
	(cd $(builddir)/out/fm; $(aldorexedir)/javagen $*.fm > ../java/$*.java)

javaopts=-cp $(abs_top_builddir)/aldor/lib/java/build/foamj.jar

$(patsubst %, out/java/%.class, $(jtests)): out/java/%.class: out/java/%.java
	(cd $(builddir)/out/java; javac $(javaopts) $*.java)

# Create .o files locally as unicl creates files in the
# current directory...
$(patsubst %, %.o, $(_otests)): %.o: out/ao/%.ao
	mkdir -p $$(dirname $@)
	$(aldorexedir)/aldor -Nfile=$(aldorexedir)/aldor.conf 	\
			      -Ccc=$(aldortooldir)/unicl	\
			      -Cargs="-Wconfig=$(aldorexedir)/aldor.conf -I$(aldorexedir)" \
			      -Fo=$(builddir)/$@ $<		\

define aldor_args
	-Nfile=$(aldorexedir)/aldor.conf 	\
	-Y$(foamlibdir)/al			\
	-I$(foamlibdir)			\
	-lAxlLib=foamlib 		\
	$(AXLFLAGS) $($*_AXLFLAGS)	\
	-Fao=out/ao/$*.ao $(srcdir)/$*.as
endef

$(patsubst %, out/ao/%.ao, $(_aotests)): out/ao/%.ao: %.as
	mkdir -p $$(dirname $@)
	$(aldorexedir)/aldor $(aldor_args)

all: $(patsubst %,out/fm/%.fm,$(fmtests)) \
     $(patsubst %,out/c/%.c,$(ctests)) \
     $(patsubst %,out/java/%.java,$(jtests)) \
     $(patsubst %,out/java/%.class,$(jtests)) \
     $(patsubst %,%.o,$(otests)) 

.PHONY: all

# 
# :: Automake requires this little lot
#
mostlyclean: 
	rm $(patsubst %, %.c, $(library))/%.c
	rm $(patsubst %, %.c, $(library))/%.ao
	rm $(patsubst %, %.c, $(library))/%.fm

clean: mostlyclean
distclean: clean 
	rm Makefile
maintainer-clean: distclean


EMPTY_AUTOMAKE_TARGETS  = dvi pdf ps info html tags ctags
EMPTY_AUTOMAKE_TARGETS += install install-data install-exec uninstall
EMPTY_AUTOMAKE_TARGETS += install-dvi install-html install-info install-ps install-pdf
EMPTY_AUTOMAKE_TARGETS += installdirs
EMPTY_AUTOMAKE_TARGETS += check installcheck

.PHONY: $(EMPTY_AUTOMAKE_TARGETS)
$(EMPTY_AUTOMAKE_TARGETS):
